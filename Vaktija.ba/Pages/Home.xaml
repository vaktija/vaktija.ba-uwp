                    </Grid.RowDefinitions>
                    <ListViewItem HorizontalContentAlignment="Stretch" Grid.Row="1" VerticalContentAlignment="Stretch" Padding="6,0,6,0" Margin="6,0,6,0" BorderThickness="0,1,0,1" BorderBrush="LightGray">
                        <Grid Background="Black">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*"/>
