                            </Grid.ColumnDefinitions>
                            <Viewbox VerticalAlignment="Center" Stretch="Fill" HorizontalAlignment="Center" Margin="3">
                                <TextBlock Text="00:00" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="44" FontFamily="Segoe UI Semilight" OpticalMarginAlignment="TrimSideBearings" FontWeight="Light" MinWidth="72"/>
                            </Viewbox>
                        </Grid>
                    </ListViewItem>
                    <ListViewItem HorizontalContentAlignment="Stretch" Grid.Row="2" VerticalContentAlignment="Stretch" Padding="6,0,6,0" Margin="6,0,6,0" BorderThickness="0,0,0,1" BorderBrush="LightGray">
                        <Grid Background="Black">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*"/>
